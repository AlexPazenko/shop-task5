{% extends 'base.html.twig' %}

{% block main %}

<section class="jumbotron text-center">
    <div class="container">
        <div class="btn-group">
            <div class="form-row align-items-center ml-3">
        {{ include('product/includes/_product_search_form.html.twig') }}
            </div>
            <div class="form-row align-items-center ml-5">
        {{ include('product/includes/_product_sort_form.html.twig') }}
        </div>
        </div>
        <p></p>
        <h1>All products:</h1>

        <ul>
            {% for product in products %}
                <li>{{ product.name}}.</li>
            {% endfor %}
        </ul>

        <a href="{{ path('create_product') }}">Add new product</a>

    </div>
</section>

    {{ knp_pagination_render(products) }}

{% endblock %}
